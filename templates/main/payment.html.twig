<div class="hidden">
    <div id="showForm" >
        <div class='payment-wrap payment-step-1'>
            <div class='payment-header-wrap'>
                <h1>{%trans%}Transacción Segura{%endtrans%}</h1>
            </div>
            <div class='payment-content-wrap'>
                <div class='grid-6-12'>
                    <form method="post" action="{{path('payment')}}"  class="jpayment w-80p">
                        <div class="step1">
                            <fieldset>
                                <legend>{%trans%}Los campos señalados con * son obligatorios{%endtrans%}</legend>
                                <input type='text' class="required" name='nombre' placeholder='{%trans%}Nombre*{%endtrans%}' />
                                <input type='text' class="required" name='apellidos' placeholder='{%trans%}Apellidos*{%endtrans%}' />
                                <input type='text' class="required email" name='email' placeholder='{%trans%}Email*{%endtrans%}' />
                                <input type='text' class="required" data-rule-digits="true" data-rule-minlength="7" data-rule-maxlength="10" name='telefono' placeholder='{%trans%}Teléfono*{%endtrans%}' />
                                <input type='text' class="required" data-rule-digits="true" data-rule-minlength="10" data-rule-maxlength="10" name='celular' placeholder='{%trans%}Celular*{%endtrans%}' />
                            </fieldset>
                        </div>

                        <div class="step2">
                            <fieldset class='grid-12-12'>
                                <input type='text' class="required number" autocomplete="off" name='numeroTarjeta' placeholder='{%trans%}Número de tarjeta*{%endtrans%}' />
                                <input type='text' class="required number" autocomplete="off" name='cvt' placeholder='{%trans%}CVT*{%endtrans%}' />
                            </fieldset>
                            <fieldset class='grid-6-12'>
                                <input type='text' class="required number" autocomplete="off" name='mesExpiracion' placeholder='{%trans%}Mes de Expiracion*{%endtrans%}' />
                            </fieldset>
                            <fieldset class='grid-6-12'>
                                <input type='text' class="required number" autocomplete="off" name='anyoExpiracion' placeholder='{%trans%}Año de Expiracion*{%endtrans%}' />
                            </fieldset>
                            <fieldset class='grid-12-12'>
                                <input type='text' class="required" name='calleyNumero' placeholder='{%trans%}Calle y número*{%endtrans%}' />
                                <input type='text' class="required" name='colonia' placeholder='{%trans%}Colonia*{%endtrans%}' />
                            </fieldset>
                            <fieldset class='grid-6-12'>
                                <input type='text' class="required number" name='cp' placeholder='{%trans%}CP*{%endtrans%}' />
                            </fieldset>
                            <fieldset class='grid-6-12'>
                                <input type='text' class="required" name='municipio' placeholder='{%trans%}Municipio*{%endtrans%}' />
                            </fieldset>
                            <fieldset class='grid-12-12'>
                                <input type='text' class="required" name='estado' placeholder='{%trans%}Estado*{%endtrans%}' />
                                <input type='text' class="required" name='pais' placeholder='{%trans%}Pais*{%endtrans%}' />
                                <input type="hidden" name="param1" value="{%trans%}Geosignal Services{%endtrans%}" />
                                <input type="hidden" name="monto" value="100" />
                            </fieldset>
                            <p>Pagar </p><h1>$400.00</h1>
                            <fieldset class='grid-12-12'>
                                <input type='button' value='{%trans%}Regresar{%endtrans%}' class='btn-red btn-payment-step-forward' />
                                <input type='submit' value='{%trans%}Realizar Pago{%endtrans%}' class='btn-red submit' />
                            </fieldset>
                        </div>
                    </form>


                </div>

                <div class='hidden step3'>
                    <div class='resume-wrap bg-solid bg-white w-80p'>
                        <span class='logo-pago-facil'></span>
                        <div class='w-50p'>
                            <h1>¡Gracias!</h1>
                            <p>{respuesta}</p>
                            <p>Orden #: {orden}</p>
                            <p>Fecha: {fecha}</p>
                            <p>Producto: {nombre}</p>
                            <p>Total: ${total} MXN</p>
                        </div>
                        <button class='btn-red reduce-padding btn-close'>Finalizar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>